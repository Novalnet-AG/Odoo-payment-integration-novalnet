<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="acquirer_form_novalnet" model="ir.ui.view">

            <field name="name">acquirer.form.novalnet</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">For additional configurations login to <a href="https://admin.novalnet.de" target="_blank">Novalnet Merchant Administration Portal</a>. To login to the Portal you need to have an account at Novalnet. If you don't have one yet, please contact <a href="mailto:sales@novalnet.de">sales@novalnet.de</a> / tel. +49 (089) 923068320</h3>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">To use the PayPal payment method please enter your PayPal API details in <a href="https://admin.novalnet.de" target="_blank">Novalnet Merchant Administration Portal</a>.</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_test_mode" attrs="{'required': [('provider', '=', 'novalnet')]}"/>
                        <field name="novalnet_vendor" attrs="{'required': [('provider', '=', 'novalnet')]}"/>
                        <field name="novalnet_auth_code" attrs="{'required': [('provider', '=', 'novalnet')]}"/>
                        <field name="novalnet_product" attrs="{'required': [('provider', '=', 'novalnet')]}"/>
                        <field name="novalnet_tariff" attrs="{'required': [('provider', '=', 'novalnet')]}"/>
                        <field name="novalnet_access_key" attrs="{'required': [('provider', '=', 'novalnet')]}"/>
                        <field name="novalnet_manual_check_limit"/>
                        <field name="novalnet_manual_check_limit_amount"/>
                        <field name="novalnet_referrer_id"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">Merchant script management</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_callbackscript_test_mode"/>
                        <field name="novalnet_callbackscript_email"/>
                        <field name="novalnet_callbackscript_email_from"/>
                        <field name="novalnet_callbackscript_email_to"/>
                        <field name="novalnet_callbackscript_email_bcc"/>
                        <field name="novalnet_callbackscript_notify_url"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">Order status management for on-hold transaction(-s)</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_on_hold_confirmation_status"/>
                        <field name="novalnet_on_hold_cancellation_status"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">Credit Card</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_enable_cc3d"/>
                        <field name="novalnet_cc_order_completion_status"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">Direct Debit SEPA</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_sepa_due_date"/>
                        <field name="novalnet_sepa_order_completion_status"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">Invoice</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_invoice_due_date"/>
                        <field name="novalnet_invoice_order_completion_status"/>
                        <field name="novalnet_invoice_callback_order_status"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">Prepayment</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
						<field name="novalnet_prepayment_order_completion_status"/>
                        <field name="novalnet_prepayment_callback_order_status"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">Barzahlen</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">                        
                        <field name="novalnet_cashpayment_slip_expiry_date"/>
                        <field name="novalnet_cashpayment_order_completion_status"/>
                        <field name="novalnet_cashpayment_callback_order_status"/>
                    </group>                    
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">PayPal</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="paypal_payment_pending_status"/>
                        <field name="novalnet_paypal_order_completion_status"/>
                    </group>                    
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">Instant Bank Transfer</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_sofort_order_completion_status"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">iDEAL</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_ideal_order_completion_status"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">eps</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_eps_order_completion_status"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">giropay</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="novalnet_giropay_order_completion_status"/>
                    </group>
                    <h3 attrs="{'invisible': [('provider', '!=', 'novalnet')]}">Przelewy24</h3>
                    <group attrs="{'invisible': [('provider', '!=', 'novalnet')]}">
                        <field name="przelewy24_payment_pending_status"/>
                        <field name="novalnet_przelewy24_order_completion_status"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
